@page
@model EVA3_MVC_AGENCIA.Areas.Executives.Pages.Account.DetailsModel
@{
    var image = "data:image/jpg;base64," + Convert.ToBase64String(Model.Input.DataExecutive.Image,
        0, Model.Input.DataExecutive.Image.Length);
    var name = Model.Input.DataExecutive.Name + " " + Model.Input.DataExecutive.LastName;
}


<div class="container">
    <h1>@name</h1>
    <div class="row">
        <div class="col-sm ">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header ">
                    <img class='imageExecutiveDetails' src="@image" />
                </div>
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <td>
                                    <p> @Model.Input.DataExecutive.Name</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataExecutive.Role </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @if (Model.Input.DataExecutive.IdentityUser.LockoutEnabled)
                                    {
                                        <p class="text-success">Disponible.</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">No disponible.</p>
                                    }

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <th>
                                    Informacion
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    NID
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataExecutive.NID</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@name</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Telefono
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataExecutive.IdentityUser.PhoneNumber</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Correo electronico
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataExecutive.Email</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <form asp-area="Executives" asp-page="Register" method="post">
                                        @{
                                            var dataExecutive = JsonConvert.SerializeObject(Model.Input.DataExecutive);
                                        }

                                        <input type="hidden" name="DataExecutive" value="@dataExecutive" />
                                        <input type="submit" value="Editar" class="btn btn-success ">
                                        <input type="submit" value="Eliminar" class="btn btn-danger ">
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

